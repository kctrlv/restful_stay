<h1>Edit Your Profile</h1>

<div class="container login" style="margin-top:50px;margin-bottom:200px;">
  <div class="container-fluid well well-md text-center">
    <%= form_for @user, :url => {controller: :users, action: :update}, method: :patch do |f| %>
    <div class="form-group row">
      <%= f.label :first_name, class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :last_name, class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email_address, class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.text_field :email_address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :phone_number, class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :description, class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :picture_url, class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.text_field :picture_url, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.text_field :password, class: "form-control" %>
      </div>
    </div>

    <%= f.submit "Update My Profile", id: "update-profile-button", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
</div>
