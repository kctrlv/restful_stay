<h1>Edit Your Profile</h1>

<%= form_for @user, :url => {controller: :users, action: :update}, method: :patch do |f| %>
<%= f.text_field :first_name, placeholder: "First Name" %><br>
<%= f.text_field :last_name, placeholder: "Last Name" %><br>
<%= f.text_field :email_address, placeholder: "Email Address" %><br>
<%= f.text_field :phone_number, placeholder: "Phone Number" %><br>
<%= f.text_field :description, placeholder: "Description" %><br>
<%= f.text_field :picture_url, placeholder: "Picture URL" %><br>
<%= f.password_field :password, placeholder: "Password" %><br>
<%= f.submit "Update My Profile" %>
<% end %>