<div class="row text-center">
  <h1>Add a New Review</h1>
</div>
<div class="container login" style="margin-top:50px;margin-bottom:200px;">
  <div class="container-fluid well well-md text-center">
    <%= form_for @review, url: api_v1_trip_review_path do |f| %>
      <div class="form-group row">
        <%= f.label :subject, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.text_field :subject, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :body, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.text_field :body, class: "form-control" %>
        </div>
      </div>
      <%= f.hidden_field :api_key, value: @user.api_key %>
      <%= f.submit "Submit", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
</div>
