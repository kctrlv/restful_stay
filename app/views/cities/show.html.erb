<h1> Listings for <%= @city.name %> </h1>

<div class="listings">
  <% @city.listings.order(:price_per_night).in_groups_of(3, false).each do |group| %>
    <div class="row text-center">
      <% group.each do |listing| %>
        <div class="listing col-sm-4">
          <p> <%= link_to listing.name, listing_path(listing) %> </p>
          <div class="img-thumbnail center-block">
            <%= link_to image_tag(listing.image_url), listing_path(listing) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
