<h1> Confirm your reservation for <%= @trip.listing.name %> </h1>

<div class="container sign_up" style="margin-top:50px;margin-bottom:200px;">
  <div class="container-fluid well well-md text-center">
    <%= form_for @trip do |f| %>
    <div class="form-group row">
      <%= f.label "Check In", class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.collection_select :checkin, @trip.listing.available_days, :id, :date, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label "Check Out", class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.collection_select :checkout, @trip.listing.available_days, :id, :date, class: "form-control" %>
      </div>
    </div>
      <%= f.hidden_field :listing_id, value: @trip.listing.id %>

      <%= f.submit "Book Trip", id: "create-trip-button", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
</div>
