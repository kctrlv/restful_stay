<div class="container login" style="margin-top:50px;margin-bottom:200px;">
  <div class="container-fluid well well-md text-center">
    <%= form_for @listing do |f| %>
      <div class="form-group row">
        <%= f.label :name, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :image_url, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.text_field :image_url, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :city, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.collection_select :city_id, City.order(:name), :id, :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.text_field :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :price_per_night, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.number_field :price_per_night, step: 0.01, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :start_date, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.collection_select :start_date, Day.future_days, :id, :date, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :end_date, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.collection_select :end_date, Day.future_days, :id, :date, class: "form-control" %>
        </div>
      </div>
      <%= f.submit 'Create Listing', id: "create-listing-button", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
</div>
